@{
    ViewBag.Title = "Загрузить данные о погоде";
}
<div class="uploadWeather">
    @using (Html.BeginForm("UploadWeatherData",
                            "Home",
                            FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
    {
<center>
    <label for="file-upload" class="custom-file-upload">
    Выберите файлы
    </label>
    <input id="file-upload" type="file" accept=".xlsx" multiple name="importedFiles"/><br/>
    <input class="btn btn-default" type="submit" value="Загрузить в базу"/><br />
    @ViewBag.Message
</center>
    }
</div>